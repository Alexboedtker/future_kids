= simple_form_for @admin do |form|
  = form.input :name
  = form.input :prename
  = form.input :email
  = form.input :phone
  = form.input :password
  = form.input :password_confirmation
  = form.input :todo

  -if current_user.is_a?(Admin)
    = form.input :inactive

  .col-sm-offset-3.col-sm-9
    = form.button :submit
