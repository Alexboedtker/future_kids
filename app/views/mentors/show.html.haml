= show_for resource do |show|
  = show.attribute :name
  = show.attribute :prename
  = show.attribute :email
  = show.attribute :address
  = show.attribute :phone
  = show.attribute :personnel_number
  = show.attribute :school
  = show.attribute :field_of_study
  = show.attribute :education
  = show.attribute :etcs
  = show.attribute :entry_date
  = show.attribute :available
  = show.association :kids do |k|
    %li= link_to k.display_name, k
  = show.association :secondary_kids do |k|
    %li= link_to k.display_name, k

- if resource.journals.present?
  %h2= Journal.model_name.human
  %table
    - resource.journals.each do |journal|
      %tr
        %td= I18n.l(journal.held_at)
        %td= journal.kid.display_name
        %td
          - if journal.cancelled?
            ausgefallen
          - else
            = "#{journal.duration} Minuten"
    %tfoot
      %tr
        %td Total
        %td
        %td
          = (resource.total_work_duration / 60.0)
          Stunden
