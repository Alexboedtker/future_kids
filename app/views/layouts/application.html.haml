!!! 5

%html
  %head
    %title FutureKids
    = stylesheet_link_tag :all
    = javascript_include_tag :defaults 
    = csrf_meta_tag
    %meta{'charset' => 'utf-8'}/
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}/

  %body
    #container
      #header
        %ul#nav
          %li= link_to Mentor.human_name, mentors_path
          %li= link_to Kid.human_name, kids_path
          - if user_signed_in?
            %li
              Eingeloggt als
              = current_user.email
              = "(#{current_user.class.human_name})"
            %li
              = link_to 'Abmelden', destroy_user_session_path
      - flash.each do |name, msg|
        = content_tag :div, msg, :id => "flash_#{name}"
      #content
        = yield

